    private void BtnLoginActionPerformed(java.awt.event.ActionEvent evt) {                                         
        String cekuser = null;
        String cekpassword = null;
        try{
            Connection conn=(Connection)KoneksiDB.getKoneksi();
            Statement st=conn.createStatement();
            String SQL="select * from tbl_user where kode_user='"+TxtKodeUser.getText()+"' and pass='"+TxtPassword.getText()+"'";
            ResultSet rs=st.executeQuery(SQL);

            if (rs.next())
            {
                cekuser=rs.getString("kode_user");
                cekpassword=rs.getString("pass");
            }
            rs.close();
            st.close();

        }catch(HeadlessException|SQLException e){
            JOptionPane.showMessageDialog(this, e.getMessage());
        }

        if (cekuser==null && cekpassword==null)
        {
            JOptionPane.showMessageDialog(null, "Username atau Password Salah/Tidak Di temukan");
        }else{
            JOptionPane.showMessageDialog(null, "Login Berhasil");
            FormMenuUtama MU=new FormMenuUtama();
            MU.setLocationRelativeTo(null);
            MU.setVisible(true);
            MU.setExtendedState(MU.MAXIMIZED_BOTH); // membuat frame full screen
            MU.setDefaultCloseOperation(MU.EXIT_ON_CLOSE); //
            dispose();
        }

        //        try {
            //            sql = "SELECT * FROM tbl_user WHERE kode_user='"+TxtKodeUser.getText()+"' AND pass='"+TxtPassword.getText()+"'";
            //            rs = stat.executeQuery(sql);
            //            System.out.println(rs.next());
            //            if(rs.next()){
                //                JOptionPane.showMessageDialog(null, "Berhasil login");
                //            }else{
                //                    JOptionPane.showMessageDialog(null, "Kode user atau password salah");
                //                }
            //        } catch (HeadlessException | SQLException e) {
            //            JOptionPane.showMessageDialog(this, e.getMessage());
            //        }
    }                                        

